
  <div class="col-md-6 col-md-offset-3">
<%= form_for @user,  html: {class: "form-horizontal"}  do |f| %>
<% if @user.errors.any? %>
  <%= render 'shared/error_messages' %>
<% end %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, placeholder: :email, type: "email", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :password, placeholder: :password, type: "password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :password_confirmation, placeholder: :password_confirmation, type: "password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create user', class: "btn btn-primary" %>
  </div>

  </div>

<% end %>
