<%= form_for @user,  html: {class: "form-horizontal"}  do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
    </div>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    
  <% end %>
<div class="form-center">
  <div class="form-group">
    <%= f.text_field :name, placeholder: :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, placeholder: :email, type: "email", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :password, placeholder: :password, type: "password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :password_confirmation, placeholder: :password_confirmation, type: "password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create user', class: "btn btn-primary" %>
  </div>
</div>
<% end %>
