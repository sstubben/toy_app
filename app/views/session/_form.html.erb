
  <div class="col-md-6 col-md-offset-3">
<%= form_for :session, url:login_path,  html: {class: "form-horizontal"}  do |f| %>


  <div class="form-group">
    <%= f.text_field :email, placeholder: :email, type: "email", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :password, placeholder: :password, type: "password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit 'Login', class: "btn btn-primary" %>
  </div>

  </div>
<% end %>
